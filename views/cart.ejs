<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-image: url("background3.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
        }

        h1 {
            color: white;
            text-align: center;
            -webkit-text-stroke: 1px blue;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" style="color: rgb(191, 255, 161)">Cart</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <form method="POST" action='/searchresults' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <ul> 
        <% for(var i=0; i<cart.length; i++) { %>
            <% if(cart[i]=="boxing"){ %>
                <a href="/boxing">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/boxing.jpg">  </a>
              <% } %>
              <% if(cart[i]=="tennis"){ %>
                <a href="/tennis">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/tennis.jpg">  </a>
              <% } %>  
              
              <% if(cart[i]=="sun"){ %>
                <a href="/sun">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/sun.jpg">  </a>
              <% } %>

              <% if(cart[i]=="iphone"){ %>
                <a href="/iphone">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/iphone.jpg">  </a>
              <% } %>

              <% if(cart[i]=="galaxy"){ %>
                <a href="/galaxy">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/galaxy.jpg">  </a>
              <% } %>

              <% if(cart[i]=="leaves"){ %>
                <a href="/leaves">  
                    <img style = "margin:40px 40px 40px 40px ;border:2px white solid; width: 150px; height: 200px "src="/leaves.jpg">  </a>
              <% } 
              
              else{ %>  
                <h1></h1>
             <% } %>
                   <% } %>
             <% if(cart.length==0){ %>
                <h1>Cart is Empty</h1>
                    <% } %>
                   </ul>

</body>
</html>